---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
    {
        number: '01',
        name: 'Domain Details',
        description: 'The complete domain intelligence platform with WHOIS lookup, marketplace search, and developer tools.',
        href: '/projects/domain-details',
        externalHref: 'https://www.domaindetails.com?ref=simplebytes',
        subProjects: [
            { name: 'Marketplace Search', icon: 'üè™', href: 'https://www.domaindetails.com/marketplace?ref=simplebytes', tag: 'free' as const },
            { name: 'Browser Extension', icon: 'üß©', href: 'https://www.domaindetails.com/extension?ref=simplebytes', tag: 'free' as const },
            { name: 'Portfolio', icon: 'üìÅ', href: 'https://portfolio.domaindetails.com?ref=simplebytes', tag: 'free' as const },
            { name: 'Academy', icon: 'üéì', href: 'https://www.domaindetails.com/academy?ref=simplebytes', tag: 'free' as const },
            { name: 'MCP & NPM', icon: 'üì¶', href: 'https://www.domaindetails.com/developers?ref=simplebytes', tag: 'opensource' as const },
            { name: 'GitHub', icon: 'üíª', href: 'https://github.com/simplebytes-com', tag: 'opensource' as const },
        ]
    },
    {
        number: '02',
        name: 'Doodlify',
        description: 'Turn your photos into cute, 2D flat & colorful doodles with AI.',
        href: '/projects/doodlify',
        externalHref: 'https://www.doodlify.ai?ref=simplebytes',
        subProjects: []
    },
    {
        number: '03',
        name: 'IG Grid Planner',
        description: 'Quickly plan, organize and share Instagram grids visually.',
        href: '/projects/ig-grid-planner',
        externalHref: 'https://igplanner.netlify.app?ref=simplebytes',
        subProjects: []
    },
    {
        number: '04',
        name: 'EasyChef.ai',
        description: 'Generate personalized recipes based on ingredients you have.',
        href: '/projects/easychef',
        externalHref: 'https://easychef.ai?ref=simplebytes',
        subProjects: []
    },
    {
        number: '05',
        name: 'Launchpage.xyz',
        description: 'Free & open source landing pages for newly registered domains.',
        href: '/projects/launchpage',
        externalHref: 'https://launchpage.xyz?ref=simplebytes',
        subProjects: []
    },
    {
        number: '06',
        name: 'OG Image Tester',
