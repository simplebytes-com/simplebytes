---
import BaseLayout from '../../layouts/BaseLayout.astro';

const features = [
    { icon: '‚ö°', title: 'Lightning Fast', description: 'Most conversions complete within 30-60 seconds.' },
    { icon: 'üé®', title: '99% Style Accuracy', description: 'AI trained on over 1 million images for consistent, charming results.' },
    { icon: 'üì∏', title: 'Multiple Formats', description: 'Supports JPG, PNG, and WebP images up to 10MB.' },
    { icon: 'üíº', title: 'Commercial Rights', description: 'Full ownership - use for merchandise, social media, and more.' }
];

const bestFor = [
    'Portraits',
    'Pet photos',
    'Couples',
    'Family pictures',
    'Good lighting',
    'Simple backgrounds'
];

const stats = [
    { value: '10K+', label: 'Doodles Created' },
    { value: '4.8/5', label: 'Rating' },
    { value: '156', label: 'Reviews' },
    { value: '<60s', label: 'Processing' }
];

const pricing = [
    { credits: 1, price: '$3', perCredit: '$3.00' },
    { credits: 3, price: '$6', perCredit: '$2.00' },
    { credits: 5, price: '$8', perCredit: '$1.60' }
];
---

<BaseLayout
    title="Doodlify - Simple Bytes"
    description="Transform your photos into hand-drawn style doodle artwork with AI. Fast, easy, and no artistic ability required."
>
    <a href="/" class="back-link">‚Üê Back to all projects</a>

    <section class="hero">
        <h1>Doodlify</h1>
        <p class="tagline">Transform your photos into charming, hand-drawn style doodles with AI. Perfect for profile pictures, gifts, and creative projects. No artistic ability required.</p>
        <div class="stats-row">
            {stats.map((stat) => (
                <div class="stat">
                    <span class="stat-value">{stat.value}</span>
                    <span class="stat-label">{stat.label}</span>
                </div>
            ))}
        </div>
        <div class="hero-links">
            <a href="https://www.doodlify.ai?ref=simplebytes" target="_blank" rel="noopener" class="btn btn--primary">
                Try Doodlify ‚Üí
            </a>
        </div>
    </section>

    <section class="how-it-works">
        <h2 class="section-title">How It Works</h2>
        <div class="steps-grid">
            <div class="step">
                <span class="step-number">1</span>
                <h3>Upload</h3>
                <p>Choose a photo you want to transform</p>
            </div>
            <div class="step">
                <span class="step-number">2</span>
                <h3>Transform</h3>
                <p>AI converts it into a charming doodle</p>
            </div>
            <div class="step">
                <span class="step-number">3</span>
                <h3>Receive</h3>
                <p>Get your high-res doodle via email</p>
            </div>
        </div>
    </section>

    <section class="features-section">
        <h2 class="section-title">Features</h2>
        <div class="features-grid">
            {features.map((feature) => (
                <div class="feature-item">
                    <span class="feature-icon">{feature.icon}</span>
                    <h3 class="feature-title">{feature.title}</h3>
                    <p class="feature-description">{feature.description}</p>
                </div>
            ))}
        </div>
    </section>

    <section class="best-for-section">
        <h2 class="section-title">Works Best With</h2>
        <div class="tags-grid">
            {bestFor.map((item) => (
                <span class="best-for-tag">{item}</span>
            ))}
        </div>
    </section>

    <section class="pricing-section">
        <h2 class="section-title">Simple Pricing</h2>
        <p class="section-description">Pay per doodle. No subscription required.</p>
        <div class="pricing-grid">
            {pricing.map((tier) => (
                <div class="pricing-card">
                    <span class="credits">{tier.credits} Credit{tier.credits > 1 ? 's' : ''}</span>
                    <span class="price">{tier.price}</span>
                    <span class="per-credit">{tier.perCredit} each</span>
                </div>
            ))}
        </div>
        <p class="pricing-note">Each credit = 1 doodle transformation with high-resolution output</p>
    </section>
</BaseLayout>

<style>
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--text-secondary);
        text-decoration: none;
        margin-bottom: 2rem;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: var(--text-primary);
    }

    .hero {
        margin-bottom: 4rem;
    }

    h1 {
        font-size: clamp(2.5rem, 6vw, 3.5rem);
        font-weight: 600;
        letter-spacing: -0.03em;
        margin-bottom: 1rem;
    }

    .tagline {
        font-size: 1.25rem;
        color: var(--text-secondary);
        max-width: 600px;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .stats-row {
        display: flex;
        gap: 2rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .stat {
        display: flex;
        flex-direction: column;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .stat-label {
        font-size: 0.8125rem;
        color: var(--text-tertiary);
    }

    .hero-links {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    /* How it works */
    .how-it-works {
        margin-bottom: 4rem;
    }

    .steps-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
    }

    .step {
        text-align: center;
        padding: 1.5rem;
    }

    .step-number {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        background: var(--accent);
        color: var(--bg-color);
        border-radius: 50%;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .step h3 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .step p {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    /* Features */
    .features-section {
        margin-bottom: 4rem;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .feature-item {
        padding: 0.5rem 0;
    }

    .feature-icon {
        font-size: 1.5rem;
        display: block;
        margin-bottom: 0.75rem;
    }

    .feature-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.375rem;
    }

    .feature-description {
        font-size: 0.875rem;
        color: var(--text-secondary);
        line-height: 1.5;
    }

    /* Best for */
    .best-for-section {
        margin-bottom: 4rem;
    }

    .tags-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .best-for-tag {
        padding: 0.5rem 1rem;
        background: var(--accent-subtle);
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        color: var(--text-primary);
    }

    /* Pricing */
    .pricing-section {
        margin-bottom: 2rem;
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .pricing-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .credits {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    .price {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .per-credit {
        font-size: 0.75rem;
        color: var(--text-tertiary);
    }

    .pricing-note {
        font-size: 0.8125rem;
        color: var(--text-tertiary);
        text-align: center;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2rem;
        }

        .tagline {
            font-size: 1rem;
        }

        .steps-grid,
        .features-grid,
        .pricing-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
