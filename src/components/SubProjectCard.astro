---
interface Props {
    name: string;
    description: string;
    href: string;
    icon: string;
    tag?: 'free' | 'opensource' | 'pro';
}

const { name, description, href, icon, tag } = Astro.props;
---

<a href={href} target="_blank" rel="noopener" class="sub-project">
    <span class="icon">{icon}</span>
    <div class="content">
        <span class="name">{name}</span>
        {tag && (
            <span class={`tag tag--${tag}`}>
                {tag === 'opensource' ? 'Open Source' : tag}
            </span>
        )}
    </div>
    <span class="arrow">â†—</span>
</a>

<style>
    .sub-project {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: var(--accent-subtle);
        border: 1px solid transparent;
        border-radius: var(--radius-md);
        text-decoration: none;
        color: inherit;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .sub-project:hover {
        background: var(--card-bg);
        border-color: var(--border-hover);
        transform: translateY(-1px);
    }

    .icon {
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .content {
        flex: 1;
        min-width: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .name {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--text-primary);
    }

    .tag {
        font-size: 0.625rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: 0.125rem 0.375rem;
        border-radius: 4px;
        background: var(--accent-subtle);
        color: var(--text-tertiary);
    }

    .tag--free {
        background: rgba(34, 197, 94, 0.1);
        color: #16a34a;
    }

    :global([data-theme="dark"]) .tag--free {
        background: rgba(34, 197, 94, 0.15);
        color: #4ade80;
    }

    .tag--opensource {
        background: rgba(59, 130, 246, 0.1);
        color: #2563eb;
    }

    :global([data-theme="dark"]) .tag--opensource {
        background: rgba(59, 130, 246, 0.15);
        color: #60a5fa;
    }

    .arrow {
        font-size: 0.875rem;
        color: var(--text-tertiary);
        opacity: 0;
        transform: translateX(-4px);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .sub-project:hover .arrow {
        opacity: 1;
        transform: translateX(0);
    }
</style>
